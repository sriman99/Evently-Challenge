# Application Configuration
APP_NAME=Evently
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-change-this-in-production
API_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/evently
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=300
REDIS_MAX_CONNECTIONS=50

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=evently_events
RABBITMQ_QUEUE_PREFIX=evently_

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@evently.com
SMTP_FROM_NAME=Evently

# Payment Gateway (Mock for development)
PAYMENT_GATEWAY_URL=https://api.stripe.com
PAYMENT_API_KEY=sk_test_your_stripe_key
PAYMENT_WEBHOOK_SECRET=whsec_your_webhook_secret

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PUBLIC_PER_MINUTE=100
RATE_LIMIT_AUTH_PER_MINUTE=200
RATE_LIMIT_BOOKING_PER_MINUTE=10

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# Booking Configuration
BOOKING_EXPIRATION_MINUTES=5
SEAT_LOCK_TTL_SECONDS=300
MAX_SEATS_PER_BOOKING=10

# Cache Configuration
CACHE_TTL_EVENTS=300
CACHE_TTL_SEATS=10
CACHE_TTL_USER_SESSION=1800

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=60

# Admin Configuration
ADMIN_EMAIL=admin@evently.com
ADMIN_PASSWORD=AdminPass123!